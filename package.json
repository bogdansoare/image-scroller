{
  "name": "adobe-homework",
  "version": "1.0.0",
  "scripts": {
    "clean": "rimraf ./dist && mkdirp dist",
    "start": "npm-run-all --parallel server watch:*",
    "watch:js": "npm run build:js -- --watch",
    "watch:static": "watch 'npm run build:static' ./src/static/",
    "watch:css": "npm run build:css -- --watch",
    "prebuild": "npm run clean",
    "build": "npm-run-all build:*",
    "build:js": "webpack",
    "build:static": "cp -R ./src/static/ ./dist/",
    "build:css": "postcss -u postcss-import -u postcss-cssnext -o dist/main.css src/css/main.css",
    "preprod": "npm run clean",
    "prod": "npm-run-all prod:*",
    "prod:js": "npm run build:js -- -p",
    "prod:static": "npm run build:static",
    "prod:css": "npm run build:css -- -u cssnano",
    "server": "browser-sync start --server 'dist' --files 'dist'",
    "lint": "eslint src/js"
  },
  "dependencies": {
    "sanitize.css": "^4.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-1": "^6.5.0",
    "browser-sync": "^2.13.0",
    "cpy-cli": "^1.0.1",
    "cssnano": "^3.7.1",
    "eslint": "^2.13.1",
    "eslint-plugin-import": "^1.8.1",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^2.3.0",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.7.0",
    "postcss-import": "^8.1.2",
    "rimraf": "^2.5.3",
    "watch": "^0.19.1",
    "webpack": "^1.13.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bogdansoare/adobe-homework.git"
  },
  "author": "Soare Bogdan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bogdansoare/adobe-homework/issues"
  },
  "homepage": "https://github.com/bogdansoare/adobe-homework#readme",
  "babel": {
    "presets": [
      "es2015",
      "stage-1"
    ]
  }
}
